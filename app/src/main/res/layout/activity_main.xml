<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/getClients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clients" />

    <Button
        android:id="@+id/getCalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getClients"
        android:text="Calls" />

    <Button
        android:id="@+id/getContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getCalls"
        android:text="Contacts" />

    <ProgressBar
        android:id="@+id/clients_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/clients_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>